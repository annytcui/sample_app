<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Sample App</h1>

    <h2>
      This is the home page for the <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a> sample application.
    </h2>

    <% if logged_in? %>
      <%= link_to "View my account", current_user, class: "btn btn-lg btn-primary" %>
    <% else %>
      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
<% end %>

<div class="home-hero">
<%= link_to image_tag("Pikachu.png", alt: "Pikachu logo"), 'https://tianyuancuipan.github.io/' %>
</div>
